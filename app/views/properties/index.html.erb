<div class="container">
  <div class="row justify-content-center my-4 ">
    <%= form_with url: properties_path, method: :get, class: "d-flex justify-content-center mb-4" do %>
        <%= text_field_tag :query, params[:query], class: "form-control w-50"%>
        <%= submit_tag "Search", address: "", class: "btn btn-primary-azul px-5" %>
    <% end %>
    <% @properties.each do |property| %>
      <div class="card justify-content-center m-1 bg-color-card" style="width: 20rem; height: 22rem">
        <%= image_tag property.image_url, class: "card-img-top", width: 286, height: 180 %>
        <div class="card-body">
            <h6 class="card-title"><strong><%= property.address %></strong></h6>
            <p class="card-text my-1"> Per night: <%= property.price %></p>
            <p class="card-text"> Occupancy: <%= property.total_occupancy %></p>
        </div>
        <%= link_to "See details",  property, class: "btn btn-primary-azul mb-3" %>
      </div>

    <% end %>
  </div>
</div>

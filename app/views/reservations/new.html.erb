<div class="container row justify-content-center">
  <div style="width: 60rem; height: 22rem">
    <h1 class= "my-4">Add a new Reservation</h1>
  <div data-controller = "price">
    <%= simple_form_for ([@property, @reservation]) do |f| %>
      <%= f.input :start_date, input_html: { class: 'form-control', value: Date.today.to_s }, html5: true %>
      <%= f.input :end_date, input_html: { class: 'form-control', value: Date.today.to_s  }, html5: true %>
      <div class= "d-flex justify-content-center gap-3">
        <%= link_to "Back to properties", properties_path, class: "btn btn-primary" %>
        <%= f.button :submit, class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
